<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.joopware.unitconverter" android:versionCode="4"
	android:versionName="1.12" android:screenOrientation="portrait">

	<application android:label="@string/app_name" android:icon="@drawable/icon">

		<activity android:name=".UnitConverter" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".ConvertActivity" android:label="@string/app_name" />

		<activity android:name=".AreaActivity" android:label="@string/area_convert_screen_name" />

		<activity android:name=".LengthActivity" android:label="@string/length_convert_screen_name" />

		<activity android:name=".VolumeActivity" android:label="@string/volume_convert_screen_name" />



		<!-- The application's publisher ID assigned by AdMob -->
		<meta-data android:value="a14d025037d4071" android:name="ADMOB_PUBLISHER_ID" />
		<!-- AdMobActivity definition -->
		<activity android:name="com.admob.android.ads.AdMobActivity"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
			android:configChanges="orientation|keyboard|keyboardHidden" />
		<!-- Track Market installs -->
		<receiver android:name="com.admob.android.ads.analytics.InstallReceiver"
			android:exported="true">
			<intent-filter>
				<action android:name="com.android.vending.INSTALL_REFERRER" />
			</intent-filter>
		</receiver>


	</application>

	<uses-sdk android:minSdkVersion="4" />


	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
</manifest>